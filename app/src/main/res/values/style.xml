<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="MyMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/disabledButtonColor</item>
        <item name="android:layout_gravity">center</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

</resources>